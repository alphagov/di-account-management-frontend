{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    // do not check types in node_modules folder
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": [
      "@types",
      "/node_modules/@types"
    ]
  },
  "exclude": [
    "test",
    "coverage",
    "src/components/**/tests"
  ]
}

